# Database configuration
DATABASE_URL=sqlite:marketplace.db

# Database encryption key (generate with: openssl rand -hex 32)
DB_ENCRYPTION_KEY=your-64-char-hex-key-here

# JWT secret for session tokens (generate with: openssl rand -hex 32)
JWT_SECRET=your-64-char-hex-key-here

# Monero RPC credentials
MONERO_RPC_USER=monero
MONERO_RPC_PASS=your-secure-password-here

# Air-Gap Arbiter Public Key (Ed25519, hex-encoded)
# Generate with: ./scripts/airgap/generate-arbiter-keypair.sh
# See docs/ARBITER-SETUP.md for complete setup guide
ARBITER_PUBKEY=a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456

# Anthropic API Key for Claude Security Analyzer
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here

# XMR/USD Exchange Rate (admin-configured, no external API calls)
# Set to 0 to disable USD display
XMR_USD_RATE=150.0

# Example usage:
# 1. Copy this file: cp .env.example .env
# 2. Add your real API key to .env
# 3. Load env vars: source .env
# 4. Run analyzer: python scripts/ai/claude_security_analyzer.py --file server/src/main.rs

# Mainnet commission address
COMMISSION_ADDRESS_MAINNET=47mP1VgUNdM9CsH38iwgyXHUD4CoD795bJMUMhqmqep4cEgxKFQKaGBX7LHQzNpvrFBSkaN3WHCibDtnrqsJPecgM1hkFiv

# =============================================================================
# OPS-001: Sentry Error Tracking (Free Tier: 5k events/month)
# =============================================================================
# Get your DSN at: https://sentry.io/
# Leave empty to disable Sentry
SENTRY_DSN=

# Deployment environment (development/staging/production)
ENVIRONMENT=development

# =============================================================================
# OPS-002: Jaeger Distributed Tracing
# =============================================================================
# Set to "true" to enable Jaeger tracing
ENABLE_JAEGER=false

# Jaeger OTLP endpoint (default: http://localhost:4317)
# For Docker: http://jaeger:4317
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# Redis Configuration (Production Multi-Server Support)
# =============================================================================
# Redis is used for:
# - Challenge store (multisig proof-of-possession)
# - Rate limiting (distributed across servers)
# - WASM multisig info coordination

# Redis connection URL (default: redis://127.0.0.1:6379)
REDIS_URL=redis://127.0.0.1:6379

# Redis password (optional, leave empty for no authentication)
REDIS_PASSWORD=

# Connection pool size (default: 10)
REDIS_POOL_SIZE=10

# Connection timeout in seconds (default: 5)
REDIS_TIMEOUT_SECS=5

# Enable Redis-backed rate limiting (default: true)
# Set to "false" to use in-memory rate limiting (single-instance only)
ENABLE_REDIS_RATE_LIMIT=true

# =============================================================================
# Arbiter Watchdog Configuration (v0.70.0)
# =============================================================================
# Automated arbiter signing for non-disputed escrows

# Master password for encrypting arbiter key packages (REQUIRED for watchdog)
# Generate with: openssl rand -base64 32
ARBITER_VAULT_MASTER_PASSWORD=

# Poll interval in seconds (default: 30)
ARBITER_WATCHDOG_POLL_INTERVAL_SECS=30

# Enable automatic signing (default: true)
ARBITER_AUTO_SIGN_ENABLED=true

# Require both parties to have signed before arbiter auto-signs (default: true)
ARBITER_REQUIRE_BOTH_SIGNATURES=true

# Telegram notifications (optional)
ARBITER_TELEGRAM_BOT_TOKEN=
ARBITER_TELEGRAM_CHAT_ID=

# Email alerts for human arbiter (optional)
ARBITER_ALERT_EMAIL=

# Webhook for external integrations (optional)
ARBITER_WEBHOOK_URL=

# SMTP configuration for email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=
